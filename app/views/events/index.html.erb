<!doctype html>
<html lang="fr">
<head>
  <meta charset="utf-8">
  <title>Tous les événements</title>
</head>
<body>
  <main>
    <%= render 'header' %>
    <%= render 'layouts/flash' %>
    <%= render 'hero_banner' %>
    <%= render 'image_text' %>
    <section>
      <h1> Tous les événements </h1>
          <div class=cards>
            <%@events.each do |event|%>
            <div class="card color_card" style="width: 18rem;">
                <div class="card-body">
                  <h2 class=color_font><%= event.title%></h2>
                  <div class="inline margin_bottom">
                    <div class=infos_accueil>
                      <i class="bi bi-geo-alt-fill small_icone"></i> <%= event.location%>
                    </div>
                    <div class=infos_accueil>
                      <i class="bi bi-calendar-event small_icone"></i> <%= event.start_date.strftime('%d'"/"'%m')%>
                    </div>
                  </div>
                  <p><%= event.description%></p>
                    <div class="inline space_between price_plus">
                      <div class=price>
                        <%= event.price%>€
                      </div>
                      <div class="plus_icone_div">
                      <a href="/events/<%= event.id%>" class="btn btn-primary plus_icone"><i class="bi bi-plus"></i></a>
                      </div>
                    </div>
                </div>
            </div>
            <%end%>
          </div>
    </section>
    </section>
  </main>
</body>
</html>
