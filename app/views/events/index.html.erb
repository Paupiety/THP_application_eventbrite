<!doctype html>
<html lang="fr">
<head>
  <meta charset="utf-8">
  <title>Tous les événements</title>
</head>
<body>
  <main>
    <section>
      <%if flash[:error]%>
        <div class="alert alert-danger" role="alert">
            <%= flash[:error]%>
        </div>
        <%elsif flash[:success]%>
        <div class="alert alert-success" role="alert">
            <%= flash[:success]%>
        </div>
    <%end%>
      <div>
        <h1> Tous les événements </h1>
        <a href="/events/new" class="btn btn-primary">Créer un événement</a>
      </div>  
        <div class="row">
          <div class="col-sm-6">
            <div class="card">
              <%@events.each do |event|%>
                <div class="card-body">
                  <h2><%= event.title%></h2>
                  <p><%= event.description%></p>
                  <div>
                    <%= event.start_date%>
                    <%= event.price%>
                    <a href="/events/<%= event.id%>" class="btn btn-primary">En savoir plus</a>
                  </div>
                </div>
              <%end%>
            </div>
          </div>
      </div>
    </section>
  </main>
</body>
</html>
